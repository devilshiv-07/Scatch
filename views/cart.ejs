<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
        <div class="w-[35%] flex flex-col gap-8 py-10 rounded-md items-center justify-center bg-zinc-200 mt-[-7vh]">
            <% user.cart.forEach(function(product){ %>
                <div class="w-[72%] rounded-md border-2 border-[<%= product.textColor %>]  overflow-hidden">
                    <div class="w-full h-56 bg-[<%= product.bgColor %>] flex justify-center items-center">
                        <img class="h-[12rem]" src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="w-full flex justify-between px-5 py-2 bg-[<%= product.panelColor %>] text-[<%= product.textColor %>]">
                        <h3 class="text-xl"><%= product.name %></h3>
                        <div class="flex items-center gap-2">
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-5 py-1 bg-[<%= product.textColor %>] text-white">
                        <h4 class="text-md">Net Total</h4>
                        <h2 class="text-md">₹ <%= product.price %></h2>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="w-[65%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= totalPrice %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= totalDiscount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= totalPrice-totalDiscount+20 %></h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <%- include('./partials/footer') %>